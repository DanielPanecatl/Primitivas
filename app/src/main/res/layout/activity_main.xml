<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.primitivas.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recta"
        android:onClick="onClickRecta"
        />
    <Button
        android:id="@+id/rectaBresenham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bresenham"
        android:onClick="onClickBresenham"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:id="@+id/circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rectaBresenham"
        android:onClick="onClickCirculo"
        android:text="Circulo" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/circulo"
        android:onClick="onClickElipse"
        android:text="Elipse" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="41dp"
        android:layout_toStartOf="@+id/rectaBresenham"
        android:onClick="onClickFigura"
        android:text="figura" />
</RelativeLayout>
